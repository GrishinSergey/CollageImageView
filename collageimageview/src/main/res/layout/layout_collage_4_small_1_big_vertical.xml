<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:layout_height="430dp">

    <com.sagrishin.collageview.CollageItemView
        android:id="@+id/primaryImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        android:layout_weight="3"
        android:scaleType="centerCrop"
        app:cardElevation="0dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.sagrishin.collageview.CollageItemView
            android:id="@+id/smallImage1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:cardElevation="0dp" />

        <com.sagrishin.collageview.CollageItemView
            android:id="@+id/smallImage2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:cardElevation="0dp" />

        <com.sagrishin.collageview.CollageItemView
            android:id="@+id/smallImage3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            app:cardElevation="0dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1">

            <com.sagrishin.collageview.CollageItemView
                android:id="@+id/smallImage4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:cardElevation="0dp" />

            <View
                android:id="@+id/countMoreShadow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66000000" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/countMoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                tools:text="+4" />
        </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>